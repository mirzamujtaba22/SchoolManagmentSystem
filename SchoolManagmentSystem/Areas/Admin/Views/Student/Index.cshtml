@model IEnumerable<SchoolManagment.UI.Areas.Admin.ViewModels.StudentViewModel>

@{
    ViewData["Title"] = "Students List";
}

<h2 class="mb-3">Students List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Add New Student</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Roll No</th>
            <th>Name</th>
            <th>Email</th>
            <th>Date of Birth</th>
            <th>Class</th>
            <th>Section</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var student in Model)
            {
                <tr>
                    <td>@student.RollNumber</td>
                    <td>@student.FullName</td> <!-- ya FirstName + LastName -->
                    <td>@student.Email</td>
                    <td>@student.DateOfBirth.ToShortDateString()</td>
                    <td>@student.ClassName</td> <!-- ClassId ki jagah readable naam -->
                    <td>@student.SectionId</td> <!-- SectionId hi show karega -->
                    <td>
                        <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No students found</td>
            </tr>
        }
        
    </tbody>
</table>
