@model SchoolManagment.UI.Areas.Admin.ViewModels.StudentViewModel

@{
    ViewData["Title"] = "Delete Student";
}

<h2>Delete Student</h2>

<h4>Are you sure you want to delete this student?</h4>
<div>
    <strong>Name:</strong> @Model.FullName <br />
    <strong>Email:</strong> @Model.Email
</div>

@using (Html.BeginForm("Delete", "Student", new { id = Model.Id }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
}
